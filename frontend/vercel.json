{
    "name": "Hardware E-commerce Frontend",
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "env": {
        "NEXT_PUBLIC_API_URL": {
            "description": "Backend API URL (Render deployment)",
            "value": "https://hardware-eccomerce.onrender.com",
            "required": true
        }
    },
    "regions": [
        "bom1"
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://hardware-eccomerce.onrender.com/api/:path*"
        },
        {
            "source": "/uploads/:path*",
            "destination": "https://hardware-eccomerce.onrender.com/uploads/:path*"
        }
    ]
}